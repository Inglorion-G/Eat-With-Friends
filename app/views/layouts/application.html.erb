<!DOCTYPE html>
<html>
<head>
  <title>EatFriends</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
	
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand">Eat With Friends</a>
			</div>

      <% if logged_in? %>
			
			<ul class="nav navbar-nav nav-pills">
				<li><a href="#">My Home</a></li>
				<li><a href="#/food_items/index">Search Foods</a></li>
				<li><a href="#/users/index">Find Friends</a></li>
			</ul>
			
        <div class="dropdown pull-right navbar-form">
          <button type="button" class="btn btn-primary dropdown-toggle user-drop-down" data-toggle="dropdown">
            <%= current_user.username %>
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to "Sign Out", session_url,
                     :method => :delete%></li>
          </ul>
        </div>
      <% else %>
        <div>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Sign In", new_session_url %></li>
            <li><%= link_to "Sign up", new_user_url %></li>
          </ul>
        </div>
      <% end %>
      </div>
  </nav>	
	
<%= render 'shared/errors' %>

<%= yield %>
</body>
</html>