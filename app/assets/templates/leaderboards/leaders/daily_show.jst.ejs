<div class="well well-sm daily-leader-show">
	
	<span class="view-profile">
		<a href="#/users/<%= leader.escape('id') %>"><button type="button" class="btn btn-info btn-lg pull-right view-profile-button">View Profile</button></a>
	</span>
	
	<div class="leader-info">
		<div class="leader-name">
			<h3><%= leader.escape('username') %></h3>
		</div>
	
		<div class="user-profile-img">
		  <img src= "<%= gravatarLink %>">
		</div>
	</div>
	
	<div class="leader-calories">
		<%= leader.escape('daily_calories') %>
	</div>
</div>