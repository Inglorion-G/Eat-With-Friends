<ul class="nav nav-tabs">
  <li class="active"><a href="#home" data-toggle="tab">Home</a></li>
  <li><a href="#food" data-toggle="tab">Food</a></li>
  <li><a href="#exercise" data-toggle="tab">Exercise</a></li>
	<li><a href="#reports" data-toggle="tab">Reports</a></li>
</ul>


<div class="row">
	<div class="tab-content">
		<div class="tab-pane active" id="home">
		  <div class="status-column col-xs-7 col-xs-offset-1">
				<div class="panel panel-primary daily-summary">
				<div class="panel-heading">
					<h4>Daily Summary for <%= user.escape('username') %></h4>
				</div>
					<div class="panel-body daily-summary-body">
						<div class="profile-picture" style="width:120px;height:120px;background-color:#ffcc00;float:left">
							<p>Profile picture!</p>
						</div>
				
						<div class="total-calories">
							0
						</div>
				
						<div class="btn btn-default btn-lg add-food pull-right">
							Add Food
						</div>
				
						<div id="calories-progress" class="progress progress-striped active">
						  <div class="progress-bar"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%">
						    <span class="sr-only">45% Complete</span>
						  </div>
						</div>

					</div>	
				</div>
		
				<div class="panel panel-primary news-feed">
					<div class="panel-heading">News Feed
					</div>
					<div class="panel-body news-feed-body">
						<div class="input-group comment-text-field">
						  <textarea class="form-control">Share something!
							</textarea>
						</div>
						<div class="input-group submit-comment">
						  <input type="submit" class="button btn-default form-control pull-right">
						</div>	
					</div>
				</div>
		
		  </div>
		</div>
	
		<div class="tab-pane" id="food">
		  <div class="status-column col-xs-7 col-xs-offset-1">
				<div class="panel panel-success user-food-list">
					<div class="panel-heading">
						<h4>Your Foods</h4>
					</div>
					
					<div class="panel-body food-diary-body">
						<p>User foods go here!</p>
						<p><%= user.user_food_items() %></p>
					</div>
				</div>
			</div>
		</div>
	
		<div class="tab-pane" id="exercise">
			<h3>Exercise</h3>
		</div>
	
		<div class="tab-pane" id="reports">
			<h3>Reports</h3>
		</div>
	</div>
</div>