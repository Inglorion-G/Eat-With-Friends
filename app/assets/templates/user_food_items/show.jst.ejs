<div class="well well-sm user-food-item">
	<button type="button" class="btn btn-danger btn-sm pull-right remove-food-button">Remove Food</button>
	<div class="food-item-info">
		<h4 class="user-food-item-name"><%= user_food_item.foodItem().escape('item_name') %>
		</h4>
		<p class="user-food-item-calories">Calories: <%= user_food_item.foodItem().escape('calories') %>
		</p>
  </div>
</div>

<div class="modal fade" id="<%= food_item.id %>-nutrition-info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="nutrition-info-label"><%= food_item.escape('item_name') %></h4>
      </div>
      <div class="modal-body">
				<section class="performance-facts">
				  <header class="performance-facts__header">
				    <h1 class="performance-facts__title">Nutrition Facts</h1>
				    <p>Serving Size <%= food_item.serving_size %> <%= food_item.serving_size_unit %> (about <%= food_item.serving_weight_grams %>g)
				    <p>Serving Per Container <%= food_item.servings_per_container %></p>
				  </header>
				  <table class="performance-facts__table">
				    <thead>
				      <tr>
				        <th colspan="3" class="small-info">
				          Amount Per Serving
				        </th>
				      </tr>
				    </thead>
				    <tbody>
				      <tr>
				        <th colspan="2">
				          <b>Calories</b>
				          <%= food_item.escape('calories') %>
				        </th>
				      </tr>
				      <tr class="thick-row">
				        <td colspan="3" class="small-info">
				          <b>% Daily Value*</b>
				        </td>
				      </tr>
				      <tr>
				        <th colspan="2">
				          <b>Total Fat</b>
				          <%= food_item.escape('total_fat') %>g
				        </th>
				        <td>
				          <b><%= Math.floor((parseInt(food_item.get('total_fat')) / 65) * 100) %>%</b>
				        </td>
				      </tr>
				      <tr>
				        <td class="blank-cell">
				        </td>
				        <th>
				          Saturated Fat
				          <%= food_item.escape('saturated_fat') %>g
				        </th>
				        <td>
				          <b><%= Math.floor((parseInt(food_item.get('saturated_fat')) / 20) * 100) %>%</b>
				        </td>
				      </tr>
				      <tr>
				        <td class="blank-cell">
				        </td>
				        <td>
				        </td>
				      </tr>
				      <tr>
				        <th colspan="2">
				          <b>Cholesterol</b>
				          <%= food_item.escape('cholesterol') %>
				        </th>
				        <td>
				          <b><%= Math.floor((parseInt(food_item.get('cholesterol')) / 300) * 100) %>%</b>
				        </td>
				      </tr>
				      <tr>
				        <th colspan="2">
				          <b>Sodium</b>
				          <%= food_item.escape('sodium') %>
				        </th>
				        <td>
				          <b><%= Math.floor((parseInt(food_item.get('sodium')) / 2400) * 100) %>%</b>
				        </td>
				      </tr>
				      <tr>
				        <th colspan="2">
				          <b>Total Carbohydrate</b>
				          <%= food_item.escape('total_carbs') %>
				        </th>
				        <td>
				          <b><%= Math.floor((parseInt(food_item.get('total_carbs')) / 300) * 100) %>%</b>
				        </td>
				      </tr>
				      <tr>
				        <td class="blank-cell">
				        </td>
				        <th>
				          Dietary Fiber
				          <%= food_item.escape('dietary_fiber') %>
				        </th>
				        <td>
				          <b><%= Math.floor((parseInt(food_item.get('dietary_fiber')) / 25) * 100) %>%</b>
				        </td>
				      </tr>
				      <tr>
				        <td class="blank-cell">
				        </td>
				        <th>
				          Sugars
				          14g
				        </th>
				        <td>
				        </td>
				      </tr>
				      <tr class="thick-end">
				        <th colspan="2">
				          <b>Protein</b>
				          <%= food_item.escape('total_protein') %>g
				        </th>
				        <td>
				        </td>
				      </tr>
				    </tbody>
				  </table>
  
				  <table class="performance-facts__table--grid">
				    <tbody>
				      <tr>
				        <td colspan="2">
				          Vitamin A
				          <%= food_item.escape('vitamin_a') %>
				        </td>
				        <td>
				          Vitamin C
				          <%= food_item.escape('vitamin_c') %>
				        </td>
				      </tr>
				      <tr class="thin-end">
				        <td colspan="2">
				          Calcium
				          <%= food_item.escape('calcium') %>
				        </td>
				        <td>
				          Iron
				          <%= food_item.escape('iron') %>
				        </td>
				      </tr>
				    </tbody>
				  </table>
  
				  <p class="small-info">* Percent Daily Values are based on a 2,000 calorie diet. Your daily values may be higher or lower depending on your calorie needs:</p>
  
				  <table class="performance-facts__table--small small-info">
				    <thead>
				      <tr>
				        <td colspan="2"></td>
				        <th>Calories:</th>
				        <th>2,000</th>
				        <th>2,500</th>
				      </tr>
				    </thead>
				    <tbody>
				      <tr>
				        <th colspan="2">Total Fat</th>
				        <td>Less than</td>
				        <td>65g</td>
				        <td>80g</td>
				      </tr>
				      <tr>
				        <td class="blank-cell"></td>
				        <th>Saturated Fat</th>
				        <td>Less than</td>
				        <td>20g</td>
				        <td>25g</td>
				      </tr>
				      <tr>
				        <th colspan="2">Cholesterol</th>
				        <td>Less than</td>
				        <td>300mg</td>
				        <td>300 mg</td>
				      </tr>
				      <tr>
				        <th colspan="2">Sodium</th>
				        <td>Less than</td>
				        <td>2,400mg</td>
				        <td>2,400mg</td>
				      </tr>
				      <tr>
				        <th colspan="3">Total Carbohydrate</th>
				        <td>300g</td>
				        <td>375g</td>
				      </tr>
				      <tr>
				        <td class="blank-cell"></td>
				        <th colspan="2">Dietary Fiber</th>
				        <td>25g</td>
				        <td>30g</td>
				      </tr>
				    </tbody>
				  </table>
  
				  <p class="small-info">
				    Calories per gram:
				  </p>
				  <p class="small-info text-center">
				    Fat 9
				    &bull;
				    Carbohydrate 4
				    &bull;
				    Protein 4
				  </p>
  
				</section>
      </div>
			
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<!-- <button type="button" class="btn btn-success btn-md pull-right modal-add-food-button">Add Food</button> -->
      </div>
    </div>
  </div>
</div>